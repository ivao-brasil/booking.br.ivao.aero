                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/Pagination"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Event"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "User not authenticated"
                    }
                },
                "parameters": [
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Event status",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "created",
                                "scheduled",
                                "finished"
                            ]
                        }
                    }
                ]
            }
        },
        "/event/{eventId}": {
            "put": {
                "tags": [
                    "Event"
                ],
                "requestBody": {
                    "description": "Event Data",
