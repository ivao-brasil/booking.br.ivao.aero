                "parameters": [
                    {
                        "name": "eventId",
                        "in": "path"
                    }
                ],
                "security": [
                    {
                        "authentication": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Event successfully updated"
                    },
                    "401": {
                        "description": "User not authenticated"
                    },
                    "403": {
                        "description": "Invalid permissions"
                    }
